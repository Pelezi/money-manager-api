generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model untitled_table {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamp(6)
}

model Passenger {
  id        Int    @id @default(autoincrement())
  firstName String @unique
  lastName  String
}

enum EntityType {
  EXPENSE
  INCOME
}

model Expense {
  id            String     @id @default(uuid())
  subcategoryId String
  amount        Float
  month         Int
  year          Int
  type          EntityType
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([year, month])
  @@index([subcategoryId])
}

model Transaction {
  id            String     @id @default(uuid())
  subcategoryId String
  amount        Float
  month         Int
  year          Int
  type          EntityType
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([year, month])
  @@index([subcategoryId])
}
